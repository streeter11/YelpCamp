<% include ../partials/header %>
   <div class= "container">
      <div class= "row">
               <h1 style= "text-align: center;">Add your personal review about <%= campground.name %></h1>
               <div style= "width: 30%; margin: 40px auto">
                  <form action= "/campgrounds/<%= campground._id %>/comments" method= POST>
                     <div class= "form-group">
                        <input class= "form-control" type= "text" name= "comment[text]" placeholder= "What did you think of it?">
                     </div>
                     <div class= "form-group">
                        <button class= "btn btn-success btn-block">Submit!</button>
                     </div>
                    <a href="/campgrounds">Go back</a>
                  </form>
               </div>
          </div>
    </div>

                   
     
